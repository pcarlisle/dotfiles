function called() {
    if [ ! -n "$1" ]; then
        echo -e "Usage: called <function>"
        return 1
    fi

    ag "(^\s*|\.)\K$1\b" $2
}

function nexus_releases() {
    for p in "$@"; do
        p_version=$(curl -s -H 'Accept: application/xml' "http://nexus.delivery.puppetlabs.net/service/local/artifact/maven/resolve?r=public&g=puppetlabs&a=${p}&v=RELEASE" | xml sel -t -m '//version' -v .)
        echo "${p}-version=${p_version}"
    done
}

function get_vmpooler_key() {
    ruby -ryaml -e 'print YAML.load(File.read("/home/patrick/.fog"))[:default][:vmpooler_token]'
}
function get_vmpooler_vm_types() {
    curl -sk http://vmpooler.delivery.puppetlabs.net/api/v1/vm | jq '.[]'
}
function get_vmpooler_vm() {
    curl -sk -X POST -d "{\"${1-redhat-7-x86_64}\":\"1\"}" -H X-AUTH-TOKEN:$(get_vmpooler_key) --url https://vmpooler.delivery.puppetlabs.net/api/v1/vm | jq '[.[].hostname?,.domain]|join(".")' | tr -d '"'
}

function delete_vmpooler_vm() {
    curl -sk -X DELETE -H X-AUTH-TOKEN:$(get_vmpooler_key) --url https://vmpooler.delivery.puppetlabs.net/api/v1/vm/${1} | jq '.'
}

function install_pe() {
    echo "require 'beaker'; require 'beaker-pe'; install_pe" > /tmp/pre_suite.rb
    BEAKER_PE_DIR=http://enterprise.delivery.puppetlabs.net/${1:-2019.1}/ci-ready beaker -h ${2:-centos7-64mdcal} --keyfile ~/.ssh/id_rsa-acceptance --preserve-hosts --pre-suite /tmp/pre_suite.rb
}

